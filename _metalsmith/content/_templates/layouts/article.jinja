{% extends "layouts/default.jinja" %}

{% block body %}

    <div class="container">
        <div class="row">

            <article class="col-md-8">
                {{ body }}
            </article>

            <nav class="col-md-4">
                <div class="list-group article-navigation">
                    {% for name, target in navigation[meta.section] %}
                        {% if name == meta.title %}
                            <a class="list-group-item active" href="{{ target }}">
                                {{ name }}
                            </a>
                        {% else %}
                            <a class="list-group-item" href="{{ target }}">
                                {{ name }}
                            </a>
                        {% endif %}
                    {% endfor %}
                </div>
            </nav>

        </div>
    </div>

{% endblock %}
